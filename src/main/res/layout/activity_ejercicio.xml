<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_ejercicio"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="org.dev4u.hv.guia5_ejemplo.EjercicioActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="28dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/cinta" />

        <ImageView
            android:id="@+id/ImgCorona3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignTop="@+id/ImgCorona2"

            android:layout_toEndOf="@+id/ImgCorona2"
            android:layout_toRightOf="@+id/ImgCorona2"
            android:layout_weight="1"
            app:srcCompat="@drawable/corona" />

        <ImageView
            android:id="@+id/ImgCorona1"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_alignBottom="@+id/imageView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="62dp"
            android:layout_marginLeft="58dp"
            android:layout_marginStart="58dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/corona" />

        <ImageView
            android:id="@+id/ImgCorona2"
            android:layout_width="80dp"
            android:layout_height="80dp"

            android:layout_weight="1"
            app:srcCompat="@drawable/corona"
            android:layout_alignTop="@+id/ImgCorona1"
            android:layout_toRightOf="@+id/ImgCorona1"
            android:layout_toEndOf="@+id/ImgCorona1" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/bntIzq"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/btnCentro"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:text="@string/izq" />

        <Button
            android:id="@+id/btnCentro"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_toLeftOf="@+id/ImgCorona3"
            android:layout_toStartOf="@+id/ImgCorona3"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:text="@string/centro" />

        <Button
            android:id="@+id/btnDer"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_below="@+id/imageView"
            android:layout_weight="1"
            android:background="@drawable/boton"
            android:text="@string/der" />
    </LinearLayout>

</LinearLayout>
